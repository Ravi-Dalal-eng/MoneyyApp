<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".MovieDetailActivity">
<ImageView
    android:layout_width="150dp"
    android:layout_height="200dp"
    android:id="@+id/poster"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/originalTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/poster"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:maxLines="2"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:textStyle="bold"
        android:gravity="center"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/overview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/originalTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:maxLines="3"
        android:ellipsize="end"
        android:gravity="start"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overview"
        android:text="@string/release_date"
        android:textSize="18sp"
        android:id="@+id/releaseDate"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/progress_bar"
        app:layout_constraintEnd_toStartOf="@+id/progress_bar"
        app:layout_constraintBottom_toBottomOf="@+id/progress_bar"
       android:text="@string/user_ratings"
        android:textSize="18sp"
        android:id="@+id/userRatings"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="@color/teal_200"/>
    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/releaseDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:cpb_background_progressbar_width="6dp"
        app:cpb_progress_direction="to_right"
        app:cpb_progressbar_width="18dp"
        app:cpb_round_border="false"
        app:cpb_progressbar_color_direction="left_to_right"
        app:cpb_progress_max="10"
        android:layout_margin="15dp"
        app:cpb_progressbar_color="@color/teal_200"
        app:cpb_indeterminate_mode="false"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playNow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar"
        android:layout_marginTop="10dp"
        android:text="@string/play_now"
        android:backgroundTint="@color/red"
        />
</androidx.constraintlayout.widget.ConstraintLayout>